{
  "name": "push-notifications-microservice",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "build/src/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "rm -rf ./build && tsc -p tsconfig.build.json && tsc-alias",
    "start": "node build/src/server.js",
    "check": "biome check .",
    "fix": "biome check --write .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "migrate:make": "tsx ./node_modules/.bin/knex  --knexfile ./knexfile.ts \"migrate:make\" $1",
    "migrate:up": "tsx ./node_modules/.bin/knex  --knexfile ./knexfile.ts \"migrate:up\" $1",
    "migrate:down": "tsx ./node_modules/.bin/knex --knexfile ./knexfile.ts \"migrate:down\" $1",
    "migrate:latest": "tsx ./node_modules/.bin/knex --knexfile ./knexfile.ts \"migrate:latest\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedro5g/push-notifications-microservice.git"
  },
  "keywords": [
    "fastify",
    "ts",
    "web-push"
  ],
  "author": "Pedro5g",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pedro5g/push-notifications-microservice/issues"
  },
  "homepage": "https://github.com/pedro5g/push-notifications-microservice#readme",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@scalar/fastify-api-reference": "^1.34.1",
    "bullmq": "^5.56.5",
    "dotenv": "^17.2.0",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^5.0.2",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@swc/core": "^1.12.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.14",
    "@types/nodemailer": "^6.4.17",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.5",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "20.0.0"
  }
}
