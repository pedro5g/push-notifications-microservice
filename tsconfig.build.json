{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "types": []
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/tests/**/*",
    "**/test/**/*",
    "**/tests/**/*",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "vitest.config.ts"
  ]
}